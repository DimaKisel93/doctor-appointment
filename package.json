{
  "name": "doctor-appointment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:server": "node dist/server/server.js",
    "build:server": "esbuild src/server/server.ts --bundle --platform=node --external:dotenv --outfile=dist/server/server.js --format=esm --packages=external",
    "start:client": "serve -s dist/client",
    "build:client": "tsc --project tsconfig.json && node esbuild.client.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src --fix",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch dist/server.js",
    "dev:server": "nodemon --watch dist/server --exec 'pnpm start:server'",
    "dev:client": "esbuild --watch --platform=browser --target=es6 --bundle src/client/index.tsx --outdir=dist/client --loader:.tsx=tsx --servedir=dist/client",
    "dev": "npm-run-all -p dev:server dev:client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "framework7": "^8.3.1",
    "mongoose": "^8.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.23.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.13",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
